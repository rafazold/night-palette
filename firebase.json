{
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 4000
    },
    "firestore": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 3000
    }
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
