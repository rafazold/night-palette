  "scripts": {
    "start": "serve dist -s",
    "build-css": "tailwind build node_modules/tailwindcss/tailwind.css -o dist/style.css",
    "predev": "yarn build-css",
    "dev": "webpack serve --mode development --config webpack.config.development.js",
    "prebuild": "NODE_ENV=production yarn build-css",
    "build": "export $(cat .env | xargs) && webpack --mode production --config webpack.config.production.js",
    "postbuild": "cp src/_redirects dist/_redirects",
    "build-stg": "yarn prebuild && export $(cat .env | xargs) && webpack --mode development --config webpack.config.development.js",
    "deploy-stg": "netlify deploy --prod"
  },
